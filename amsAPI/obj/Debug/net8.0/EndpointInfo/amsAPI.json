{
  "openapi": "3.0.1",
  "info": {
    "title": "amsAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/V1/assets": {
      "post": {
        "tags": [
          "Assets"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddAssetRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddAssetRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddAssetRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/locations": {
      "get": {
        "tags": [
          "ReferenceData"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/brands": {
      "get": {
        "tags": [
          "ReferenceData"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/features": {
      "get": {
        "tags": [
          "ReferenceData"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/categories": {
      "get": {
        "tags": [
          "ReferenceData"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddAssetRequestDto": {
        "required": [
          "brandId",
          "categoryId",
          "locationId"
        ],
        "type": "object",
        "properties": {
          "categoryId": {
            "type": "string",
            "format": "uuid"
          },
          "locationId": {
            "type": "string",
            "format": "uuid"
          },
          "brandId": {
            "type": "string",
            "format": "uuid"
          },
          "description": {
            "maxLength": 100,
            "type": "string",
            "nullable": true
          },
          "serialNumber": {
            "type": "string",
            "nullable": true
          },
          "assetAttributes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AddAssetrequestAttributeDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AddAssetrequestAttributeDto": {
        "required": [
          "featureId",
          "value"
        ],
        "type": "object",
        "properties": {
          "featureId": {
            "type": "string",
            "format": "uuid"
          },
          "value": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}